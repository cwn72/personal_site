= form_for [:admin, @resume], html: {role: 'form'}  do |f|
  -if @resume.errors.any?
    = render partial: 'shared/errors_explanation', locals: { errors: @resume.errors }
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :site
    = f.text_field :site, class: 'form-control'
  .form-group
    = f.submit class: 'btn btn-default'